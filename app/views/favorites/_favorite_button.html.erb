<% unless current_user.documents == document %>

    <% if current_user.favorite?(document) %>
        <%= form_with(model: current_user.favorites.find_by(document_id: document.id), local: true, method: :delete) do |f| %>
            <%= hidden_field_tag :document_id, document.id %>
            <%= f.submit '保存を解除', class: 'btn btn-danger' %>
        <% end %>
    <% else %>
        <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
            <%= hidden_field_tag :document_id, document.id %>
            <%= f.submit '保存', class: 'btn btn-primary' %>
        <% end %>
    <% end %>

<% end %>