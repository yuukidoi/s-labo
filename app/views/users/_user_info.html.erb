<div class="row" id="user_info">
  <div class="offset-1 col-lg-2">
    
      
          <% if @user.image? %>
            <p class="user-image"><%= cl_image_tag @user.image.thumb.url, :size =>'180x180', id: 'user-image' %></p>
          <% else %>
            <p class="user-image"><%= cl_image_tag 's512_f_object_92_2bg.jpg', :size =>'180x180', id: 'user-image' %></p>
          <% end %>
        
      
      <% if @user == current_user %>
               <%= link_to '編集', edit_user_path, data: {"turbolinks" => false} %>
      
      <% end %>
   
  </div>

  <div class="col-lg-5">
   
       <h3><%= @user.name %></h3>
       
       <div class="box11">
       <p id="introduce"><%= @user.introduce %></p>
       </div>
  </div>
</div>

  <div class="col-sm-12">
    <ul class="nav nav-tabs nav-justified mb-3">
        
        
        
      <li class="nav-item"><a href="<%= mylog_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(mylog_user_path(@user)) %>">投稿 <span class ="badge badge-secondary">
      <%= @count_mylog %></span></a></li>
      
      <li class="nav-item"><a href="<%= likes_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(likes_user_path(@user)) %>">保存 <span class ="badge badge-secondary">
      <%= @count_likes %></span></a></li>
    </ul>
  </div>