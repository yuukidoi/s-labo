<div class="sign up">
    <h1>sign up</h1>
</div>

<div class="row">
    <div class="col-sm-6 offset-sm-3">
        
        <%= form_with(model: @user, local: true) do |f| %>
        
        <div class="form-group">
            <%= f.label :name, '名前' %>
            <%= f.text_field :name, class: 'form-control' %>
        </div>
        
        <div class="form-group">
            <%= f.label :image, '写真' %>
            
            <%= f.file_field :image %>
            <%= f.hidden_field :image_cache %>
        </div>

        
        <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
    <% end %>
    </div>
</div>