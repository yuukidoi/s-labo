<div class="card-deck", id="card_list">

     <% documents.each do |document| %>
        <div class="col-lg-4" id="card">
            <div class="card bg-light">
                
             
                  <div class="card-body">
                      <div class="row">
                      <div class="col-lg-5 col-sm-3">
                        <% if document.posts.first.image.present? %>
                            <%= cl_image_tag document.posts.first.image.thumb.url, :width=>180, :height=>180, class:'img-fluid' %>
                         <% else %>
                            <%= cl_image_tag "https://res.cloudinary.com/hkc1jmpeu/image/upload/v1569026462/186.jpg", :width=>180, :height=>180, class:'img-fluid' %>　<!--画像ないときの画像を決める   保存用　document.posts.first.image.thumb.url-->
                         <% end %>
                      </div>
                      <div class="col-lg-7 col-sm-9">
                            <h4 class="card-title"><%= document.title.truncate(18) %></h4>

                            <p class="card-text"><%= document.goal.truncate(30) %></p>
                        <!---    <p class="card-text"><%#= document.subject %>：<%#= document.content %></p> --->
                            <p><%= render 'documents/tag_list', document: document %></p>
                             
                      </div>
                      </div>
                   <p>投稿者　
                   <%= document.user.name %>
                   <%= link_to '指導案を見る', document_path(document.id) %>
                    </p>
                    <% if logged_in? %>
                    <%= render 'favorites/favorite_button', document: document %>
                <% end %>
                    
                  </div>
            </div>
        </div>  
    <% end %> 
    

</div>


    